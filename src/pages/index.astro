---
import RootLayout from "../layouts/root-layout.astro";
import Card, { type CardProps } from "../components/card/card";
import BetList from "../components/bet-list/bet-list";
import { getAllBets } from "../database/database";
import type { GetBetDto } from "../models/add-bet.model";

const betList = (await getAllBets()) as unknown as GetBetDto[];
console.log(betList);

const cardDetails: CardProps[] = [
  { title: "Profit", amount: 100 },
  { title: "Losses", amount: 20.2 },
  { title: "Bank Roll", amount: 30.1 },
  { title: "Potential Profit", amount: -30.5 },
];
---

<RootLayout>
  <main>
    <div
      class="mx-auto grid max-w-md grid-cols-2 gap-2 p-5 md:max-w-full md:grid-cols-4"
    >
      {cardDetails.map((card) => <Card {...card} />)}
    </div>
    <BetList bets={betList} />
  </main>
</RootLayout>
